{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],

  "rules": {
    "prettier/prettier": [
      "error",
      {},
      {
        "usePrettierrc": true
      }
    ]
  },

  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "sourceType": "module"
  },

  "plugins": ["@typescript-eslint", "prettier"]
}
